            <button class="time-filter-btn" data-period="ytd">Year to Date</button>
            <button class="time-filter-btn" data-period="all">All Time</button>
        </div>
    </div>

    <!-- Stats Grid -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-header">
                <div class="stat-icon inbox">
                    <i class="fas fa-inbox"></i>
                </div>
                <div class="stat-trend trend-up">
                    <i class="fas fa-arrow-up"></i>
                    12%
                </div>
            </div>
            <div class="stat-value" id="total-emails">2,847</div>
            <div class="stat-label">Total Emails Processed</div>
        </div>
        
        <div class="stat-card">
            <div class="stat-header">
                <div class="stat-icon time">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="stat-trend trend-down">
                    <i class="fas fa-arrow-down"></i>
                    8%
                </div>
            </div>
            <div class="stat-value" id="avg-response">4.2</div>
            <div class="stat-label">Avg. Response Time (Hours)</div>
        </div>
        
        <div class="stat-card">
            <div class="stat-header">
                <div class="stat-icon category">
                    <i class="fas fa-filter"></i>
                </div>
                <div class="stat-trend trend-up">
                    <i class="fas fa-arrow-up"></i>
                    5%
                </div>
            </div>
            <div class="stat-value" id="accuracy">94%</div>
            <div class="stat-label">AI Categorization Accuracy</div>
        </div>
        
        <div class="stat-card">
            <div class="stat-header">
                <div class="stat-icon sentiment">
                    <i class="fas fa-smile"></i>
                </div>
                <div class="stat-trend trend-neutral">
                    <i class="fas fa-minus"></i>
                    0%
                </div>
            </div>
            <div class="stat-value" id="sentiment">78%</div>
            <div class="stat-label">Positive Sentiment Score</div>
        </div>
    </div>

    <!-- Charts Section -->
    <div class="charts-section">
        <!-- Email Volume Chart -->
        <div class="chart-container">
            <div class="chart-header">
                <h3 class="chart-title">
                    <i class="fas fa-envelope"></i>
                    Email Volume Over Time
                </h3>
                <div class="chart-actions">
                    <button class="chart-btn" data-chart="volume" data-type="line">Line</button>
                    <button class="chart-btn active" data-chart="volume" data-type="bar">Bar</button>
                </div>
            </div>
            <div class="chart-canvas-container">
                <canvas id="volumeChart"></canvas>
            </div>
        </div>
        
        <!-- Category Distribution Chart -->
        <div class="chart-container">
            <div class="chart-header">
                <h3 class="chart-title">
                    <i class="fas fa-chart-pie"></i>
                    Category Distribution
                </h3>
                <div class="chart-actions">
                    <button class="chart-btn active" data-chart="category" data-type="pie">Pie</button>
                    <button class="chart-btn" data-chart="category" data-type="doughnut">Doughnut</button>
                </div>
            </div>
            <div class="chart-canvas-container">
                <canvas id="categoryChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Category Distribution Details -->
