            // Animate total emails count
            const totalEmailsElement = document.getElementById('total-emails');
            if (totalEmailsElement) {
                const totalEmails = parseInt(totalEmailsElement.textContent) || 0;
                animateValue(totalEmailsElement, 0, totalEmails, 1500);
            }
            
            // Animate category counts in stats section
            const categoryCountElements = document.querySelectorAll('.stat-item .stat-number[id$="-count"]');
            categoryCountElements.forEach(element => {
                const count = parseInt(element.textContent) || 0;
                animateValue(element, 0, count, 1200);
            });
            
            // Add click effects to email cards
